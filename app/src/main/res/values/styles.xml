<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--透明状态栏-->
    <style name="ActivityThemeOfTransparentStatusBar" parent="AppTheme">
    </style>

    <!--（启动页）-->
    <style name="SplashActivity" parent="AppTheme">
    </style>

    <!--白色强调色-->
    <style name="colorAccentWhiteTheme" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/color_white</item>
    </style>


    <!--底部弹出PopupWindow-->
    <style name = "BottomSelectAnimationShow">
        <item name="android:windowEnterAnimation">@anim/bottom_enter</item>
        <item name="android:windowExitAnimation">@anim/bottom_exit</item>
    </style>

</resources>
