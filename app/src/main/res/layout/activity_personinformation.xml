<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_background_common">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_personinformation"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <!--账号ID-->
    <LinearLayout
        android:id="@+id/ll_account_id"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/textview_background_selector">
        <TextView
            android:id="@+id/tv_account_id"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:textSize="16sp"
            android:text="账号ID"/>
        <TextView
            android:id="@+id/tv_account_id_edit"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="2"
            android:layout_marginRight="15dp"
            android:gravity="center_vertical|right"
            android:textSize="16sp"
            android:textStyle="italic"
            android:text="---"/>
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_separator"/>

    <!--用户名-->
    <LinearLayout
        android:id="@+id/ll_username"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/textview_background_selector">
        <TextView
            android:id="@+id/tv_username"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:textSize="16sp"
            android:text="用户名"/>
        <TextView
            android:id="@+id/tv_username_edit"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="2"
            android:layout_marginRight="15dp"
            android:gravity="center_vertical|right"
            android:textSize="16sp"
            android:textStyle="italic"
            android:text="---"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_separator"/>

    <!--个性签名-->
    <LinearLayout
        android:id="@+id/ll_user_signature"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/textview_background_selector">
        <TextView
            android:id="@+id/tv_user_signature"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:textSize="16sp"
            android:text="个性签名"/>
        <TextView
            android:id="@+id/tv_user_signature_edit"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="2"
            android:layout_marginRight="15dp"
            android:gravity="center_vertical|right"
            android:textSize="16sp"
            android:textStyle="italic"
            android:text="---"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_separator"/>

    <!--邮箱-->
    <LinearLayout
        android:id="@+id/ll_mail"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/textview_background_selector">
        <TextView
            android:id="@+id/tv_mail"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:textSize="16sp"
            android:text="邮箱"/>
        <TextView
            android:id="@+id/tv_mail_edit"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="2"
            android:layout_marginRight="15dp"
            android:gravity="center_vertical|right"
            android:textSize="16sp"
            android:textStyle="italic"
            android:text="---"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_separator"/>

    <!--手机号-->
    <LinearLayout
        android:id="@+id/ll_phone_number"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/textview_background_selector">
        <TextView
            android:id="@+id/tv_phone_number"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:textSize="16sp"
            android:text="手机号"/>
        <TextView
            android:id="@+id/tv_phone_number_edit"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="2"
            android:layout_marginRight="15dp"
            android:gravity="center_vertical|right"
            android:textSize="16sp"
            android:textStyle="italic"
            android:text="---"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_separator"/>

    <!--微信-->
    <LinearLayout
        android:id="@+id/ll_wechat"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/textview_background_selector">
        <TextView
            android:id="@+id/tv_wechat"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:textSize="16sp"
            android:text="微信"/>
        <TextView
            android:id="@+id/tv_wechat_edit"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="2"
            android:layout_marginRight="15dp"
            android:gravity="center_vertical|right"
            android:textSize="16sp"
            android:textStyle="italic"
            android:text="---"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_separator"/>

    <!--QQ-->
    <LinearLayout
        android:id="@+id/ll_qq"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/textview_background_selector">
        <TextView
            android:id="@+id/tv_qq"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:textSize="16sp"
            android:text="QQ"/>
        <TextView
            android:id="@+id/tv_qq_edit"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="2"
            android:layout_marginRight="15dp"
            android:gravity="center_vertical|right"
            android:textSize="16sp"
            android:textStyle="italic"
            android:text="---"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_separator"/>

</LinearLayout>